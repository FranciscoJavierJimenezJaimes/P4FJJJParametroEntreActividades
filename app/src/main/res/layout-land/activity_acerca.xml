<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AcercaActivity">

    <ScrollView
        android:layout_width="639dp"
        android:layout_height="281dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/acercade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/saluda"
                app:srcCompat="@drawable/saludo" />

            <TextView
                android:id="@+id/Acercade"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/itemacercade"
                android:textSize="80sp" />

            <TextView
                android:id="@+id/version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/version"
                android:textSize="60sp" />

            <TextView
                android:id="@+id/creado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/App"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/minombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/creador"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/tecnologico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/escuelanombre"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/grupo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/grup"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/docente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/docente"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/nombredoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Victor"
                android:textSize="36sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/back"
                    android:layout_width="90dp"
                    android:layout_height="60dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:background="@drawable/volver2"
                    android:onClick="back" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>